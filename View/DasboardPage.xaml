<Page x:Class="LaundryApps.View.DasboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LaundryApps.View"
      mc:Ignorable="d" 
      d:DesignHeight="812" d:DesignWidth="1124"
      Title="DasboardPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Content="DASHBOARD" Foreground="Black" Padding="25 0 0 0" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="30" FontWeight="Bold"/>
        <Label Grid.Row="1" Content="THIS IS DASHBOARD PAGE" Foreground="Blue" Margin="250" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="30" FontWeight="Bold"/>
        <Button x:Name="btnClose" Content="Button" HorizontalAlignment="Left" Margin="1041,18,0,0" VerticalAlignment="Top" Click="btnClose_Click"/>
    </Grid>
</Page>
