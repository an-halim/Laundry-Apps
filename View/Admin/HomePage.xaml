<Page x:Class="LaundryApps.View.Admin.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LaundryApps.View.Admin"
      mc:Ignorable="d" 
      d:DesignHeight="812" d:DesignWidth="1124" Background="#fff"
      Title="HomePage">

    <Grid>
        <Image Source="/View/Images/bgHome.png" Stretch="Fill"/>
        <Label Content="Welcome To Our" HorizontalAlignment="Left" Margin="128,98,0,0" VerticalAlignment="Top" Foreground="#fff" FontSize="70" FontWeight="Bold"/>
        <Label Content="Application" HorizontalAlignment="Left" Margin="128,185,0,0" VerticalAlignment="Top" Foreground="#fff" FontSize="70" FontWeight="Bold"/>
        <Label Content="Click Button Below To Start the Program" HorizontalAlignment="Left" Margin="128,369,0,0" Foreground="#fff" FontSize="20" FontWeight="Bold" VerticalAlignment="Top"/>
        <Button x:Name="btnStart"  Content="Get's Started" Style="{DynamicResource PrimaryButton}" HorizontalAlignment="Left" Margin="128,590,0,0" FontSize="18" VerticalAlignment="Top" Height="72" Width="268"/>

    </Grid>
</Page>
