                <Label Content="Foto" Margin="10,380,0,0" FontSize="20"/>
                <Image Margin="87,410,334,110" Width="200" Height="200" Source="/View/Images/img_laundry.png"/>
                <Button Style="{DynamicResource PrimaryButton}" Width="80" Height="40" Content="Browse" Margin="147,653,394,44"/>
